@model List<cottages_asp.Models.BuildingViewModel>;
<div class="container">
	<div class="row gy-4">
		@foreach (var i in Model)
		{
			<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
				<div class="item-card">
					<div class="button-overlay">
						<img src="images/house.jpg" class="img-responsive w-100">
						<i class="heart-icon fa-regular fa-heart"></i>
					</div>
					<div class="card-content">
						<div class="row">
							<div class="col-8 fatter-text">
								<a href="#" class="fatter-text">@i.Name</a>
							</div>
							<div class="tittle col-4">
								<i class="fa-regular fa-star"></i>@i.Review
							</div>
						</div>
						<div class="review">@i.Description</div>
						<div class="review ">Apr 2 - 8</div>
						<!--div class="fatter-text">@ViewBag.OfferOptionList night</div>-->
					</div>
				</div>
			</div>
		}
	</div>
</div>
